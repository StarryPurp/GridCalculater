<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="bstar128.example.hansung.gridcalculater.MainActivity"
    android:orientation="vertical"
    android:layout_gravity="center">
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:orientation="vertical"
        android:rowCount="6"
        android:layout_gravity="center">

        <Button
            android:id="@+id/but_num0"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:text="0" />

        <Button
            android:id="@+id/but_num1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:text="1" />

        <Button
            android:id="@+id/but_num2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:text="2" />

        <Button
            android:id="@+id/but_num3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="0"
            android:text="3" />

        <Button
            android:id="@+id/but_num4"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="0"
            android:text="4" />

        <Button
            android:id="@+id/but_num5"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="5" />

        <Button
            android:id="@+id/but_num6"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:text="6" />

        <Button
            android:id="@+id/but_num7"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:text="7" />

        <Button
            android:id="@+id/but_num8"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="1"
            android:text="8" />

        <Button
            android:id="@+id/but_num9"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="1"
            android:text="9" />


    </GridLayout>

    <Button
        android:id="@+id/but_add"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="+"
    />
    <Button
        android:id="@+id/but_min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-"
        />
    <Button
        android:id="@+id/but_multi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ร"
        />
    <Button
        android:id="@+id/but_divid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="รท"
        />
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"/>

</LinearLayout>
